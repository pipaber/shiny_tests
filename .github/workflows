name: Deploy Shiny App

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Build and run Docker container
      run: |
        docker build -t test_deployment .
        docker docker run -d -it -p 51795:51795 --cap-add SYS_TIME --name shiny-python-app-container test_deployment

    - name: Deploy to shinyapps.io
      env:
        SHINYAPPS_TOKEN: ${{ secrets.SHINYAPPS_TOKEN }}
        SHINYAPPS_SECRET: ${{ secrets.SHINYAPPS_SECRET }}
        GEMINI_API_KEY: ${{ secrets.GEMINI_API_KEY }}
      run: |
        echo "GEMINI_API_KEY=${GEMINI_API_KEY}" > app/.env
        rsconnect add --account <ACCOUNT> --name <NAME> --token <TOKEN> --secret <SECRET>
        rsconnect deploy shiny /path/to/app --name <NAME> --title my-app

    - name: Clean up
      run: |
        rm -rf app
        docker stop shiny-python-app-container
        docker rm shiny-python-app-container
